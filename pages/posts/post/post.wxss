.post-container {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
    background: #fff;
}

.post-author-date {
    margin: 10rpx 0 10rpx 10rpx;
}

.post-author {
    width: 60rpx;
    height: 60rpx;
    vertical-align:middle;
}

.post-date {
    margin-left: 20rpx;
    vertical-align: middle;
}

.post-title {
    margin-left: 20rpx;
    margin-bottom: 10rpx;
    font-size: 32rpx;
    font-weight: 700;
    color: #333;
}

.post-image {
    margin: 0 auto 15rpx;
    width: 100%;
    height: 340rpx;
}

.post-content {
    margin-left: 20rpx;
    margin-bottom: 20rpx;
    font-size: 26rpx;
    line-height: 40rpx;
    letter-spacing: 2rpx;
    color: #666;
}

.post-like {
    margin-left: 20rpx;
    margin-bottom: 20rpx;
}

.post-like-image {
    margin-right: 10rpx;
    width: 18px;
    height: 18px;
    vertical-align: middle;
}

.post-like-font {
    margin-right: 40rpx;
    font-size: 18rpx;
    line-height: 18rpx;
    vertical-align: middle;
}
