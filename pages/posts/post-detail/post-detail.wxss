.container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
  height: 100%;
}

.image {
  width: 100%;
  height: 460rpx;
}

/*.hide{
  opacity: 0;
}*/

.audio {
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  width: 102rpx;
  height: 110rpx;
  top: 180rpx;
  opacity: 0.6;
}

.author-date {
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar {
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}

.author {
  margin-left: 20rpx;
  font-size: 30rpx;
  font-weight: 300;
  vertical-align: middle;
  color: #666;
}

.const-text {
  margin-left: 20rpx;
  color: #999;
}

.date {
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}

.title {
  margin-top: 30rpx;
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.icon {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.icon Image {
  width: 90rpx;
  height: 90rpx;
}

.share {
  margin-left: 30rpx;
}

.horizon {
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
}

.content {
  margin: 20rpx 30rpx;
  line-height: 44rpx;
  color: #666;
  letter-spacing: 2px;
}
