/*pages/movies/movie-datail/movie-detail.wxss */
@import '../stars/stars.wxss';

.container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 320rpx;
  filter: blur(20px);
}

.head-content {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
}

.main-title {
  margin-top: 50rpx;
  margin-left: 40rpx;
  font-size: 19px;
  color: #fff;
  font-weight: bold;
  letter-spacing: 2px;
}

.sub-title {
  margin-top: 30rpx;
  margin-left: 40rpx;
  font-size: 28rpx;
  color: #fff;
}

.like {
  display: flex;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.highlight-font {
  margin-right: 10rpx;
  font-size: 22rpx;
  color: #fc8c08;
}

.plain-font {
  margin-right: 30rpx;
  font-size: 22rpx;
  color: #666;
}

.movie-img {
  position: absolute;
  top: 160rpx;
  right: 30rpx;
  height: 238rpx;
  width: 175rpx;
}

.summary {
  margin-top: 40rpx;
  margin-left: 40rpx;
  color: #777;
}

.original-title {
  margin-bottom: 30rpx;
  font-size: 24rpx;
  color: #1f3463;
  font-weight: bold;
}

.flex-row {
  display: flex;
  margin-bottom: 20rpx;
}

.mark {
  margin-right: 30rpx;
  white-space: nowrap;
  color: #999;
}

.hr {
  margin-top: 45rpx;
  width: 100%;
  height: 1px;
  background-color: #d9d9d9;
}

.synopsis {
  display: flex;
  flex-direction: column;
  margin: 50rpx 40rpx;
}

.synopsis-title {
  margin-bottom: 20rpx;
  color: #999;
}

.synopsis-content {
  line-height: 40rpx;
  letter-spacing: 1px;
}

.casts {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
}

.casts-font {
  margin-bottom: 20rpx;
  color: #999;
}

.casts-container {
  white-space: nowrap;
}

.cast {
  display: inline-flex;
  flex-direction: column;
  margin-right: 40rpx;
  margin-bottom: 50rpx;
  width: 170rpx;
  text-align: center;
  white-space: normal;
}

.cast-img {
  width: 170rpx;
  height: 210rpx;
}

.cast-name {
  margin: 10rpx auto 0;
}
