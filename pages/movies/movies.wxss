/* pages/movies/movies.wxss */
@import 'movie-list/movie-list.wxss';
@import 'movie-grid/movie-grid.wxss';

.search {
  display: flex;
  width: 100%;
  height: 80rpx;
  background: #f2f2f2;
}

.search-img {
  margin: auto 0 auto 20rpx;
}

.search input {
  width: 620rpx;
  height: 100%;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.xx-img {
  width: 26rpx;
  height: 26rpx;
  margin: auto 0;
}

.container {
  display: flex;
  flex-direction: column;
  background: #f2f2f2;
}

.movie-list-container {
  margin-bottom: 30rpx;
}

.search-result {
  position: absolute;
  top: 80rpx;
  left: 0;
  width: 100%;
}
